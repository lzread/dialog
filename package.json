{
  "name": "dialogjs",
  "description": "JavaScript dialog.",
  "version": "1.0.0",
  "main": "dist/dialog.common.js",
  "module": "dist/dialog.esm.js",
  "browser": "dist/dialog.js",
  "style": "dist/dialog.css",
  "files": [
    "src",
    "dist"
  ],
  "scripts": {
    "build": "npm run build:css && npm run build:js",
    "build:css": "postcss src/index.css -o dist/dialog.css --no-map",
    "build:js": "rollup -c",
    "clear": "del-cli dist",
    "codecov": "cat coverage/lcov.info | codecov",
    "compress": "npm run compress:css && npm run compress:js",
    "compress:css": "postcss dist/dialog.css -u cssnano -o dist/dialog.min.css --no-map",
    "compress:js": "uglifyjs dist/dialog.js -o dist/dialog.min.js -c -m --comments /^!/",
    "copy": "cpy dist/dialog.css docs/css",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:css": "stylelint {src,docs}/**/*.{css,scss,html} --fix",
    "lint:js": "eslint src test *.js --fix",
    "release": "npm run clear && npm run lint && npm run build && npm run compress && npm run copy && npm test",
    "start": "npm-run-all --parallel watch:*",
    "watch:css": "postcss src/index.css -o docs/css/dialog.css -m -w",
    "watch:js": "rollup -c -m -w"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lzread/dialog.git"
  },
  "keywords": [
    "image",
    "dialog",
    "dialogjs",
    "dialog.js",
    "html",
    "css",
    "javascript",
    "web"
  ],
  "author": {
    "name": "lzread",
    "url": "https://lzread.com/"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/lzread/dialog/issues"
  },
  "homepage": "https://lzread.github.io/dialog",
  "devDependencies": {
    "@babel/core": "^7.11.4",
    "@babel/preset-env": "^7.11.0",
    "@commitlint/cli": "^9.1.2",
    "@commitlint/config-conventional": "^9.1.2",
    "babel-plugin-istanbul": "^6.0.0",
    "chai": "^4.2.0",
    "change-case": "^4.1.1",
    "codecov": "^3.7.2",
    "cpy-cli": "^3.1.1",
    "create-banner": "^1.0.0",
    "cssnano": "^4.1.10",
    "del-cli": "^3.0.1",
    "eslint": "^7.7.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-plugin-import": "^2.22.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.13",
    "mocha": "^8.1.3",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^7.1.1",
    "postcss-header": "^2.0.0",
    "postcss-import": "^12.0.1",
    "postcss-preset-env": "^6.7.0",
    "postcss-url": "^8.0.0",
    "puppeteer": "^5.2.1",
    "rollup": "^2.26.8",
    "rollup-plugin-babel": "^4.4.0",
    "rollup-plugin-sass": "^1.2.2",
    "stylelint": "^13.6.1",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-order": "^4.1.0",
    "uglify-js": "^3.10.2"
  },
  "browserslist": [
    "last 2 versions",
    "> 1%",
    "not ie <= 8"
  ],
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "{src,test}/**/*.js|*.conf*.js": "eslint --fix",
    "{src,docs}/**/*.{css,scss,html}": "stylelint --fix"
  }
}
